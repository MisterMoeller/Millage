            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="upgrade" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- material-Reihe -->
            <LinearLayout
                android:id="@+id/upgrade_layout_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="@dimen/spacing_horizontal_villagemenu_right"
                    android:src="@mipmap/material" />

                <TextView
                    android:id="@+id/upgrade_kosten_material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1123123" />

            </LinearLayout>

            <!-- food-Reihe -->
