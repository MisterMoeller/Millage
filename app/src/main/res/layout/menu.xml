    <!-- Upgrade -->
    <LinearLayout
        android:id="@+id/layout_upgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_vertical_villagemenu"
        android:orientation="horizontal">
        >

        <TextView
